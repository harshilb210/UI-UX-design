<body>

<header>
  <h1>üçΩÔ∏è Digital Restaurant Menu</h1>
</header>

<div class="order-type">
  <label><strong>Order Type:</strong></label>
  <select id="orderType">
    <option>Dine-In</option>
    <option>Takeaway</option>
  </select>
</div>

<div class="categories">
  <button onclick="filterMenu('all')">All</button>
  <button onclick="filterMenu('starter')">Starters</button>
  <button onclick="filterMenu('main')">Main Course</button>
  <button onclick="filterMenu('drink')">Drinks</button>
</div>

<div class="menu" id="menu"></div>

<div class="cart">
  <h2>üõí Your Order</h2>
  <div id="cartItems"></div>
  <div class="total" id="total">Total: $0</div>
  <button class="place-order" onclick="placeOrder()">Place Order</button>
</div>

<script>
  const foodItems = [
    { id: 1, name: "Spring Rolls", price: 5, category: "starter", img: "https://via.placeholder.com/300x200?text=Spring+Rolls" },
    { id: 2, name: "Burger", price: 10, category: "main", img: "https://via.placeholder.com/300x200?text=Burger" },
    { id: 3, name: "Pizza", price: 12, category: "main", img: "https://via.placeholder.com/300x200?text=Pizza" },
    { id: 4, name: "Pasta", price: 11, category: "main", img: "https://via.placeholder.com/300x200?text=Pasta" },
    { id: 5, name: "Cold Drink", price: 3, category: "drink", img: "https://via.placeholder.com/300x200?text=Drink" }
  ];

  let cart = [];

  function displayMenu(items) {
    const menu = document.getElementById("menu");
    menu.innerHTML = "";
    items.forEach(item => {
      menu.innerHTML += `
        <div class="item">
          <img src="${item.img}">
          <h3>${item.name}</h3>
          <p>$${item.price}</p>
          <button onclick="addToCart(${item.id})">Add to Cart</button>
        </div>
      `;
    });
  }

  function filterMenu(category) {
    if (category === "all") {
      displayMenu(foodItems);
    } else {
      displayMenu(foodItems.filter(item => item.category === category));
    }
  }

  function addToCart(id) {
    const item = foodItems.find(i => i.id === id);
    cart.push(item);
    updateCart();
  }

  function updateCart() {
    const cartItems = document.getElementById("cartItems");
    cartItems.innerHTML = "";
    let total = 0;

    cart.forEach(item => {
      total += item.price;
      cartItems.innerHTML += `
        <div class="cart-item">
          <span>${item.name}</span>
          <span>$${item.price}</span>
        </div>
      `;
    });

    document.getElementById("total").innerText = "Total: $" + total;
  }

  function placeOrder() {
    if (cart.length === 0) {
      alert("Your cart is empty!");
      return;
    }
    const orderType = document.getElementById("orderType").value;
    alert("Order placed successfully! (" + orderType + ")");
    cart = [];
    updateCart();
  }

  displayMenu(foodItems);
</script>

</body>
</html>
